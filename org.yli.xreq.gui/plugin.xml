<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>

   <extension
         id="application"
         point="org.eclipse.core.runtime.applications">
      <application>
         <run
               class="org.yli.xreq.gui.Application">
         </run>
      </application>
   </extension>
   <extension
         point="org.eclipse.ui.perspectives">
      <perspective
            class="org.yli.xreq.gui.Perspective"
            id="org.yli.xreq.gui.perspective"
            name="XReq Perspective">
      </perspective>
   </extension>
   <extension
         point="org.eclipse.ui.commands">
      <command
            id="org.eclipse.ui.file.exit"
            name="Exit">
      </command>
      <command
            id="org.eclipse.ui.help.aboutAction"
            name="About">
      </command>
      <command
            id="org.eclipse.ui.window.preferences"
            name="&amp;Preferences">
      </command>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            allPopups="false"
            locationURI="menu:org.eclipse.ui.main.menu">
         <menu
               id="org.yli.xreq.gui.menu.file"
               label="&amp;File">
            <command
                  commandId="org.eclipse.ui.file.exit"
                  icon="icons/application-exit.png"
                  label="E&amp;xit"
                  style="push">
            </command>
         </menu>
         <menu
               id="org.yli.xreq.gui.menu.windows"
               label="Windows">
            <command
                  commandId="org.eclipse.ui.window.preferences"
                  icon="icons/preference.png"
                  label="&amp;Preferences"
                  style="push">
            </command>
         </menu>
         <menu
               id="org.yli.xreq.gui.menu.help"
               label="Help">
            <command
                  commandId="org.eclipse.ui.help.aboutAction"
                  icon="icons/help-about.png"
                  label="&amp;About XRequirement"
                  style="push">
            </command>
         </menu>
      </menuContribution>
      <menuContribution
            allPopups="false"
            locationURI="toolbar:org.eclipse.ui.main.toolbar">
         <toolbar
               id="org.yli.xreq.gui.toolbar.main">
            <command
                  commandId="org.eclipse.ui.file.exit"
                  icon="icons/application-exit.png"
                  label="E&amp;xit"
                  style="push">
            </command>
         </toolbar>
      </menuContribution>
   </extension>

</plugin>
